<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_educationSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_medium"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/main_employmentSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:showIn="@layout/content_scrolling">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/main_educationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education"
                android:layout_margin="@dimen/text_margin"
                style="@style/SansSerifBlack.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/main_educationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_educationHeader"/>

        <TextView
                android:id="@+id/main_educationUniversity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_large_plus"
                android:layout_marginEnd="@dimen/margin_padding_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/main_educationDate"
                app:layout_constraintTop_toTopOf="@id/main_educationDate"
                app:layout_constraintBottom_toBottomOf="@id/main_educationDate"/>

        <TextView
                android:id="@+id/main_educationCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_medium"
                app:layout_constraintTop_toBottomOf="@id/main_educationUniversity"
                app:layout_constraintStart_toStartOf="@id/main_educationUniversity"
                app:layout_constraintEnd_toEndOf="@id/main_educationUniversity"/>

        <TextView
                android:id="@+id/main_educationKeyModules"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:layout_marginBottom="@dimen/margin_padding_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_educationCourse"
                app:layout_constraintStart_toStartOf="@id/main_educationCourse"
                app:layout_constraintEnd_toEndOf="@id/main_educationCourse"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>