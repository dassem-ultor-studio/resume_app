<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_interestsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_medium"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/main_educationSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:showIn="@layout/content_scrolling">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/main_interestsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employment"
                android:layout_margin="@dimen/text_margin"
                style="@style/MontSerratBold.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/main_interestsDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_margin"
                style="@style/MontSerratRegular.Small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_interestsHeader"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>