<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
            android:id="@+id/employmentItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_medium"
            style="@style/MontSerratBold.SmallPlus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/employmentItem_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_large_plus"
            android:layout_marginEnd="@dimen/margin_padding_medium"
            style="@style/MontSerratBold.SmallPlus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/employmentItem_date"
            app:layout_constraintTop_toTopOf="@id/employmentItem_date"
            app:layout_constraintBottom_toBottomOf="@id/employmentItem_date"/>

    <TextView
            android:id="@+id/employmentItem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            style="@style/MontSerratRegular.SmallPlus"
            app:layout_constraintTop_toBottomOf="@id/employmentItem_company"
            app:layout_constraintStart_toStartOf="@id/employmentItem_company"
            app:layout_constraintEnd_toEndOf="@id/employmentItem_company"/>

    <TextView
            android:id="@+id/employmentItem_responsibilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_medium"
            style="@style/MontSerratRegular.Small"
            app:layout_constraintTop_toBottomOf="@id/employmentItem_title"
            app:layout_constraintStart_toStartOf="@id/employmentItem_company"
            app:layout_constraintEnd_toEndOf="@id/employmentItem_company"/>

</androidx.constraintlayout.widget.ConstraintLayout>